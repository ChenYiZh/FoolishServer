<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <settings>
    <!--服务器id-->
    <server>1</server>
    <!--公网ip-->
    <ip>127.0.0.1</ip>
    <!--版本号，主版本号和副版本为int类型，修复版本和编译版本可为string。后期会用于分布式判断-->
    <version>0.0.1.0-alpha</version>
    <!--C#脚本存放目录-->
    <cs-script-path>../Scripts</cs-script-path>
    <!--编译后的程序集名称-->
    <assembly>FoolishServer.Runtime.dll</assembly>
    <!--服务器启动运行时,需要实现FoolishServer.Runtime.CustomRuntime-->
    <main-class-fullname>FoolishServer.RuntimeMain</main-class-fullname>
    <!--Model类的命名空间-->
    <!--<model-namespace>FoolishServer.Model</model-namespace>-->
  </settings>
  <hosts>
    <!--服务器名称必须唯一，ip应该设置为公网ip-->
    <host name="default" port="9001" type="tcp">
      <!--最大并发数量-->
      <max-connections>10000</max-connections>
      <!--TCP全连接队列长度-->
      <backlog>1000</backlog>
      <!--默认连接池容量大小-->
      <max-accept-capacity>1000</max-accept-capacity>
      <!--默认消息处理连接池容量大小-->
      <max-io-capacity>1000</max-io-capacity>
      <!--数据通讯缓存字节大小-->
      <buffer-size>8192</buffer-size>
      <!--通讯内容整体偏移-->
      <offset>2</offset>
      <!--是否使用压缩-->
      <use-gzip>true</use-gzip>
    </host>
    <!--<host name="http" ip="127.0.0.1" port="80" type="http"/>-->
  </hosts>
  <script>
    <debug>true</debug>
  </script>
</configuration>